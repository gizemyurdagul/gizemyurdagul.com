---
import BaseHead from "../components/BaseHead.astro";
import SiteHeader from "../components/SiteHeader.astro";
import SiteFooter from "../components/SiteFooter.astro";
import type { SiteConfig } from "../config/site";
import { siteConfig } from "../config/site";

export interface MetaItem {
  label: string;
  value: string;
}

interface Props {
  title: string;
  description?: string;
  meta?: MetaItem[];
  heroImage?: string;
  heroAlt?: string;
  typeLabel?: string;
  tags?: string[];
  site?: SiteConfig;
  showDescription?: boolean;
  sidebarPosition?: "left" | "right";
}

const {
  title,
  description,
  meta = [],
  heroImage,
  heroAlt,
  typeLabel,
  tags = [],
  site = siteConfig,
  showDescription = true,
  sidebarPosition = "right",
} = Astro.props;

const hasSidebarSlot = Astro.slots.has("sidebar");
const shellClasses = [
  "post-shell",
  hasSidebarSlot && "post-shell--with-sidebar",
  hasSidebarSlot && `post-shell--sidebar-${sidebarPosition}`,
]
  .filter(Boolean)
  .join(" ");
---

<!doctype html>
<html lang="en">
  <BaseHead
    title={`${title} | ${site.title}`}
    description={description ?? site.description}
  />
  <body>
    <SiteHeader />
    <main class="post-main">
      <div class="container">
        <section class={shellClasses}>
          {
            hasSidebarSlot && sidebarPosition === "left" && (
              <aside class="post-sidebar">
                <slot name="sidebar" />
              </aside>
            )
          }
          <article class="post-card">
            {typeLabel && <p class="post-eyebrow">{typeLabel}</p>}
            {
              description && showDescription && (
                <p class="post-description">{description}</p>
              )
            }
            {
              meta.length > 0 && (
                <dl class="post-meta">
                  {meta.map((item) => (
                    <div>
                      <dt>{item.label}</dt>
                      <dd>{item.value}</dd>
                    </div>
                  ))}
                </dl>
              )
            }
            {
              tags.length > 0 && (
                <div class="post-tags">
                  {tags.map((tag) => (
                    <span>{tag}</span>
                  ))}
                </div>
              )
            }
            {
              heroImage && (
                <figure class="post-hero">
                  <img src={heroImage} alt={heroAlt ?? title} loading="lazy" />
                </figure>
              )
            }
            <div class="post-content">
              <slot />
            </div>
          </article>
          {
            hasSidebarSlot && sidebarPosition === "right" && (
              <aside class="post-sidebar">
                <slot name="sidebar" />
              </aside>
            )
          }
        </section>
      </div>
    </main>
    <SiteFooter />
  </body>
</html>

<style>
  .post-main {
    padding-top: 128px;
    padding-bottom: 84px;
  }

  .post-shell {
    width: 100%;
    max-width: 900px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .post-shell--with-sidebar {
    max-width: 100%;
    display: grid;
    gap: 24px;
    align-items: flex-start;
  }

  .post-shell--sidebar-left {
    grid-template-columns: minmax(220px, 280px) 1fr;
  }

  .post-shell--sidebar-right {
    grid-template-columns: 1fr minmax(220px, 300px);
  }

  .post-card {
    background-color: #fff;
    border: 1px solid var(--slate-200);
    border-radius: 20px;
    padding: clamp(24px, 4vw, 44px);
  }

  .post-eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-size: 0.85rem;
    color: var(--orange-500);
    font-weight: 600;
    margin: 0 0 8px;
  }

  .post-card h1 {
    margin-top: 0;
    margin-bottom: 14px;
    font-size: clamp(1.9rem, 3vw, 2.8rem);
    font-family: var(--font-serif);
    line-height: 1.2;
    color: var(--slate-900);
  }

  .post-description {
    margin-top: 0;
    margin-bottom: 24px;
    color: var(--slate-600);
    font-size: 1.06rem;
    line-height: 1.7;
  }

  .post-meta {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 12px 20px;
    margin: 0 0 1.4rem;
  }

  .post-meta dt {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--slate-500);
    margin-bottom: 4px;
  }

  .post-meta dd {
    margin: 0;
    color: var(--slate-800);
    font-weight: 500;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 20px;
  }

  .post-tags span {
    padding: 6px 12px;
    border-radius: 999px;
    font-size: 0.82rem;
    background: rgba(249, 115, 22, 0.1);
    border: 1px solid rgba(249, 115, 22, 0.18);
    color: var(--slate-700);
  }

  .post-hero {
    margin: 0 0 24px;
    border-radius: 14px;
    overflow: hidden;
  }

  .post-content {
    font-size: 1.02rem;
    line-height: 1.8;
    color: var(--slate-800);
  }

  .post-content :global(h2),
  .post-content :global(h3) {
    margin-top: 2.4rem;
    margin-bottom: 0.8rem;
    color: var(--slate-900);
  }

  .post-content :global(p) {
    margin-bottom: 1.2rem;
  }

  .post-content :global(img) {
    width: 100%;
    border-radius: 12px;
    margin: 1.7rem 0;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: 0 0 1.4rem 1.4rem;
    padding-left: 1rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.35rem;
  }

  .post-sidebar {
    background-color: #fff;
    border: 1px solid var(--slate-200);
    border-radius: 16px;
    padding: 22px;
    height: fit-content;
    position: sticky;
    top: 102px;
  }

  @media (max-width: 1023px) {
    .post-shell--with-sidebar {
      grid-template-columns: 1fr;
    }

    .post-sidebar {
      position: static;
      order: 2;
    }
  }
</style>

<style is:global>
  @import "../styles/global.css";
</style>
