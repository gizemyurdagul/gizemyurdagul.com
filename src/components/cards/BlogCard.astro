---
import BaseCard from "./BaseCard.astro";

interface Props {
  title: string;
  description?: string;
  href: string;
  image?: string;
}

const { title, description, href, image } = Astro.props;
const hasImage = Boolean(image);
---

<BaseCard colSpan={hasImage ? 2 : 1}>
  <article class:list={["content", hasImage && "split"]}>
    <div class="body">
      <h2>
        <a href={href}>{title}</a>
      </h2>
      {description && <p class="description">{description}</p>}
      <a href={href} class="read-more"> Read More &rarr; </a>
    </div>
    {
      hasImage && (
        <figure class="media">
          <img src={image} alt={title} loading="lazy" />
        </figure>
      )
    }
  </article>
</BaseCard>

<style>
  .blog-card {
    height: 100%;
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 16px;
    height: 100%;
  }

  .content.split {
    flex-direction: row;
    gap: 24px;
  }

  .media {
    flex: 1;
    margin: 0;
  }

  .media img {
    width: 100%;
    height: 100%;
    border-radius: calc(var(--border-radius) - 4px);
    object-fit: cover;
    aspect-ratio: 4 / 3;
  }

  .body {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .body h2 {
    margin: 0;
  }

  .body h2 a {
    color: var(--primary-text);
    text-decoration: none;
    transition: color var(--transition-speed) ease;
  }

  .body h2 a:hover {
    color: var(--accent1);
  }

  .description {
    color: var(--secondary-text);
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    min-height: 3.6em;
  }

  .body .read-more {
    margin-top: auto;
    text-decoration: none;
    color: var(--accent1);
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    transition: transform var(--transition-speed) ease;
  }

  .body .read-more:hover {
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .content.split {
      flex-direction: column;
    }
  }
</style>
