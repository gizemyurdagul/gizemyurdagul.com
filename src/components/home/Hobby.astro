---
import IndexCard from "../cards/IndexCard.astro";
---

<IndexCard rowSpan={2}>
  <h2>Current Hobby</h2>
  <p>Exploring analog photography.</p>
  <div class="hobby-image-placeholder"></div>
</IndexCard>

<style>
  p {
    color: var(--secondary-text);
    margin-top: 0;
  }
  .hobby-image-placeholder {
    width: 100%;
    height: 200px;
    margin-top: 15px;
    background: #e9ecef;
    border-radius: 10px;
  }
  :global(html[data-theme="dark"]) .hobby-image-placeholder {
    background: #2c2c2c;
  }
</style>
