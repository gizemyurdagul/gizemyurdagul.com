---
import Card from "../Card.astro";
---

<Card colSpan={2}>
  <h2>My Location</h2>
  <p>Currently based in Adana, Turkey.</p>
  <div class="map-placeholder">üìç</div>
</Card>

<style>
  p {
    color: var(--secondary-text);
    margin-top: 0;
    margin-bottom: 15px;
  }
  .map-placeholder {
    flex-grow: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    background: #e9ecef;
    border-radius: 10px;
    transition: background-color var(--transition-speed) ease;
  }
  :global(html[data-theme="dark"]) .map-placeholder {
    background: #2c2c2c;
  }
</style>
