---
import type { MarkdownHeading } from "astro";

interface Props {
  headings: MarkdownHeading[];
  title?: string;
  date?: string;
  tags?: string[];
}

const { headings, title, date, tags = [] } = Astro.props as Props;
const items = headings.filter((heading) => heading.depth <= 3);
const hasContent = items.length > 0 || Boolean(date) || tags.length > 0;
---

{
  hasContent && (
    <nav class="toc" aria-label={title ?? "Table of contents"}>
      {title && <p class="toc__title">On This Page</p>}
      {date && <p class="toc__date">{date}</p>}
      {items.length > 0 && (
        <ul class="toc__list">
          {items.map((heading) => (
            <li class={`toc__item toc__item--depth-${heading.depth}`}>
              <span class="toc__indicator" aria-hidden="true" />
              <a href={`#${heading.slug}`}>{heading.text}</a>
            </li>
          ))}
        </ul>
      )}
      {tags.length > 0 && (
        <div class="toc__extra">
          <p class="toc__divider" aria-hidden="true">
            ----
          </p>
          <div class="toc__tags">
            <p class="toc__tags-label">Tags</p>
            <ul>
              {tags.map((tag) => (
                <li>{tag}</li>
              ))}
            </ul>
          </div>
        </div>
      )}
    </nav>
  )
}

<style>
  .toc {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .toc__extra {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .toc__title {
    margin: 0;
    font-weight: 600;
    font-size: 0.95rem;
    color: var(--secondary-text);
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .toc__date {
    margin: 0;
    color: var(--secondary-text);
    font-size: 0.9rem;
  }

  .toc__list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .toc__item {
    position: relative;
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 8px 0 8px 16px;
    border-left: 2px dashed rgba(255, 154, 139, 0.35);
  }

  .toc__item--depth-1 {
    font-weight: 600;
    color: var(--primary-text);
    border-left: none;
    padding-left: 0;
  }

  .toc__item--depth-1 .toc__indicator {
    width: 14px;
    height: 14px;
    border-radius: 4px;
    background: var(--accent1);
    box-shadow: 0 0 0 2px rgba(255, 106, 136, 0.2);
  }

  .toc__item--depth-2 {
    margin-left: 12px;
    padding-left: 28px;
  }

  .toc__item--depth-2 .toc__indicator {
    width: 10px;
    height: 10px;
    border-radius: 999px;
    background: rgba(255, 154, 139, 0.95);
    box-shadow: 0 0 0 2px rgba(255, 154, 139, 0.25);
  }

  .toc__item--depth-3 {
    margin-left: 28px;
    padding-left: 32px;
    border-left-style: dotted;
    opacity: 0.85;
  }

  .toc__item--depth-3 .toc__indicator {
    width: 8px;
    height: 8px;
    border-radius: 2px;
    background: var(--secondary-text);
    box-shadow: none;
  }

  .toc__indicator {
    flex-shrink: 0;
  }

  .toc__item a {
    color: inherit;
    text-decoration: none;
    font-size: 0.95rem;
    line-height: 1.4;
    transition: color var(--transition-speed) ease;
  }

  .toc__item--depth-2 a,
  .toc__item--depth-3 a {
    color: var(--secondary-text);
  }

  .toc__item a:hover {
    color: var(--accent1);
  }

  .toc__divider {
    color: var(--secondary-text);
    margin: 4px 0 0;
    letter-spacing: 0.4em;
  }

  .toc__tags {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .toc__tags-label {
    margin: 0;
    font-size: 0.85rem;
    color: var(--secondary-text);
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .toc__tags ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }

  .toc__tags li {
    padding: 4px 10px;
    border-radius: 999px;
    background-color: rgba(255, 106, 136, 0.12);
    border: 1px solid rgba(255, 106, 136, 0.3);
    font-size: 0.8rem;
  }

  @media (max-width: 1023px) {
    .toc {
      position: static;
    }
  }
</style>
