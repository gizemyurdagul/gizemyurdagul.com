---
import type { MarkdownHeading } from "astro";
import { CalendarDays, ListTree, Tags } from "@lucide/astro";

interface Props {
  headings: MarkdownHeading[];
  title?: string;
  date?: string;
  tags?: string[];
}

const { headings, title, date, tags = [] } = Astro.props as Props;
const items = headings.filter((heading) => heading.depth <= 3);
const hasContent = items.length > 0 || Boolean(date) || tags.length > 0;
---

{
  hasContent && (
    <nav class="toc" aria-label={title ?? "Table of contents"}>
      {title && (
        <p class="toc__title">
          <ListTree class="toc__title-icon" /> On This Page
        </p>
      )}
      {date && (
        <p class="toc__date">
          <CalendarDays class="toc__title-icon" /> {date}
        </p>
      )}
      {items.length > 0 && (
        <ul class="toc__list">
          {items.map((heading) => (
            <li class={`toc__item toc__item--depth-${heading.depth}`}>
              <span class="toc__indicator" aria-hidden="true" />
              <a href={`#${heading.slug}`}>{heading.text}</a>
            </li>
          ))}
        </ul>
      )}
      {tags.length > 0 && (
        <div class="toc__extra">
          <div class="toc__tags">
            <p class="toc__tags-label">
              <Tags class="toc__title-icon" /> Tags
            </p>
            <ul>
              {tags.map((tag) => (
                <li>{tag}</li>
              ))}
            </ul>
          </div>
        </div>
      )}
    </nav>
  )
}

<style>
  .toc {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .toc__extra {
    display: flex;
    flex-direction: column;
    gap: 10px;
    padding-top: 2px;
  }

  .toc__title {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    margin: 0;
    font-weight: 600;
    font-size: 0.84rem;
    color: var(--slate-600);
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .toc__date {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    margin: 0;
    color: var(--slate-500);
    font-size: 0.86rem;
  }

  .toc__list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .toc__item {
    position: relative;
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 8px 0 8px 16px;
    border-left: 2px dashed rgba(14, 165, 233, 0.25);
  }

  .toc__item--depth-1 {
    font-weight: 600;
    color: var(--slate-800);
    border-left: none;
    padding-left: 0;
  }

  .toc__item--depth-1 .toc__indicator {
    width: 10px;
    height: 10px;
    border-radius: 4px;
    background: var(--orange-500);
    box-shadow: 0 0 0 2px rgba(249, 115, 22, 0.2);
  }

  .toc__item--depth-2 {
    margin-left: 12px;
    padding-left: 28px;
  }

  .toc__item--depth-2 .toc__indicator {
    width: 8px;
    height: 8px;
    border-radius: 999px;
    background: var(--sky-500);
    box-shadow: 0 0 0 2px rgba(14, 165, 233, 0.2);
  }

  .toc__item--depth-3 {
    margin-left: 28px;
    padding-left: 32px;
    border-left-style: dotted;
    opacity: 0.85;
  }

  .toc__item--depth-3 .toc__indicator {
    width: 7px;
    height: 7px;
    border-radius: 2px;
    background: var(--slate-400);
    box-shadow: none;
  }

  .toc__indicator {
    flex-shrink: 0;
  }

  .toc__item a {
    color: inherit;
    text-decoration: none;
    font-size: 0.9rem;
    line-height: 1.4;
    transition: color 0.2s ease;
  }

  .toc__item--depth-2 a,
  .toc__item--depth-3 a {
    color: var(--slate-600);
  }

  .toc__item a:hover {
    color: var(--orange-500);
  }

  .toc__tags {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .toc__tags-label {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    margin: 0;
    font-size: 0.82rem;
    color: var(--slate-600);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-weight: 600;
  }

  .toc__tags ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }

  .toc__tags li {
    padding: 4px 10px;
    border-radius: 999px;
    background-color: rgba(14, 165, 233, 0.1);
    border: 1px solid rgba(14, 165, 233, 0.2);
    font-size: 0.8rem;
    color: var(--slate-700);
  }

  .toc__title-icon {
    width: 14px;
    height: 14px;
    color: var(--orange-500);
  }

  @media (max-width: 1023px) {
    .toc {
      position: static;
    }
  }
</style>
