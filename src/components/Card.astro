---
interface Props {
	colSpan?: number;
	rowSpan?: number;
	class?: string;
}

const { colSpan = 1, rowSpan = 1, class: className = '' } = Astro.props;
---

<div 
	class={`bento-item ${className}`}
	style={`grid-column: span ${colSpan}; grid-row: span ${rowSpan};`}
>
	<slot />
</div>

<style>
	.bento-item {
		background-color: var(--surface);
		border-radius: var(--border-radius);
		box-shadow: var(--shadow);
		padding: 24px;
		transition: transform var(--transition-speed) ease, box-shadow var(--transition-speed) ease, background-color var(--transition-speed) ease;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}

	.bento-item:hover {
		transform: translateY(-5px);
		box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
	}

	:global(html[data-theme="dark"]) .bento-item:hover {
		box-shadow: 0 15px 35px rgba(0, 0, 0, 0.25);
	}

	/* Global styles for slotted content */
	.bento-item :global(h2 a),
	.bento-item :global(h4 a) {
		color: var(--primary-text);
		text-decoration: none;
		transition: color var(--transition-speed) ease;
	}

	.bento-item :global(h2 a:hover),
	.bento-item :global(h4 a:hover) {
		color: var(--accent1);
	}

	.bento-item :global(img) {
		width: 100%;
		border-radius: var(--border-radius);
		margin-bottom: 15px;
		aspect-ratio: 16 / 9;
		object-fit: cover;
	}

	.bento-item :global(.read-more) {
		text-decoration: none;
		color: var(--accent1);
		font-weight: 500;
		margin-top: auto;
		display: inline-block;
		transition: transform var(--transition-speed) ease;
	}

	.bento-item :global(.read-more:hover) {
		transform: translateX(5px);
	}
</style>
