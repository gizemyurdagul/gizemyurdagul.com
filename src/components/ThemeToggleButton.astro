---
import IconButton from "./IconButton.astro";
---

<IconButton title="Toggle theme" id="theme-toggle" aria-pressed="false">
  <svg
    class="sun-icon"
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <circle cx="12" cy="12" r="5"></circle>
    <line x1="12" y1="1" x2="12" y2="3"></line>
    <line x1="12" y1="21" x2="12" y2="23"></line>
    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
    <line x1="1" y1="12" x2="3" y2="12"></line>
    <line x1="21" y1="12" x2="23" y2="12"></line>
    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
  </svg>
  <svg
    class="moon-icon"
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
  </svg>
</IconButton>

<script is:inline>
  const BUTTON_ID = "theme-toggle";

  const setPressedState = (button, theme) => {
    if (!button) return;
    const isDark = theme === "dark";
    button.setAttribute("aria-pressed", isDark ? "true" : "false");
    button.setAttribute(
      "aria-label",
      isDark ? "Switch to light mode" : "Switch to dark mode",
    );
  };

  const bindToggle = () => {
    const button = document.getElementById(BUTTON_ID);
    const controller = window.__theme;

    if (!button || button.dataset.bound === "true") {
      return;
    }

    if (!controller) {
      const handleReady = () => {
        window.removeEventListener("themecontrollerready", handleReady);
        bindToggle();
      };
      window.addEventListener("themecontrollerready", handleReady, { once: true });
      setPressedState(button, document.documentElement.dataset.theme ?? "light");
      return;
    }

    button.dataset.bound = "true";

    const handleThemechange = (event) => {
      setPressedState(button, event.detail);
    };

    button.addEventListener("click", () => {
      const nextTheme = controller.get?.() === "dark" ? "light" : "dark";
      controller.set?.(nextTheme);
      setPressedState(button, nextTheme);
    });

    const cleanup = () => {
      window.removeEventListener("themechange", handleThemechange);
      document.removeEventListener("astro:beforeload", cleanup);
      window.removeEventListener("beforeunload", cleanup);
    };

    window.addEventListener("themechange", handleThemechange);
    document.addEventListener("astro:beforeload", cleanup, { once: true });
    window.addEventListener("beforeunload", cleanup, { once: true });
    setPressedState(button, controller.get?.() ?? "light");
  };

  const init = () => {
    if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", bindToggle, { once: true });
    } else {
      bindToggle();
    }
  };

  init();
  document.addEventListener("astro:page-load", () => {
    requestAnimationFrame(bindToggle);
  });
</script>

<style>
  .moon-icon {
    display: none;
    transform: rotate(-90deg);
    transition: transform var(--transition-speed) ease;
  }

  .sun-icon {
    display: block;
    transform: rotate(0deg);
    transition: transform var(--transition-speed) ease;
  }

  :global(html[data-theme="dark"]) .moon-icon {
    display: block;
    transform: rotate(0deg);
  }

  :global(html[data-theme="dark"]) .sun-icon {
    display: none;
    transform: rotate(90deg);
  }
</style>
