---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import { siteConfig } from "../config/site";

const projects = (await getCollection("projects")).sort((a, b) => {
  const dateA = a.data.date ? new Date(a.data.date).valueOf() : 0;
  const dateB = b.data.date ? new Date(b.data.date).valueOf() : 0;
  return dateB - dateA;
});

const { title, description } = siteConfig.sections.projects;
---

<Layout title={title} description={description}>
  <section class="projects-page section-padding">
    <div class="container">
      <header class="projects-header">
        <p class="eyebrow">Portfolio</p>
        <h1>Selected Work</h1>
        <p>
          A curated set of projects focused on product direction, execution quality, and
          measurable impact.
        </p>
      </header>

      <div class="projects-grid">
        {
          projects.map((project, index) => (
            <a
              class={`project-card card-${(index % 3) + 1}`}
              href={`/projects/${project.slug}/`}
              data-astro-prefetch
            >
              <span class="project-role">Project</span>
              <h2>{project.data.title}</h2>
              {project.data.description && <p>{project.data.description}</p>}
              {project.data.skills?.length ? (
                <div class="project-tags">
                  {project.data.skills.slice(0, 4).map((skill) => (
                    <span>{skill}</span>
                  ))}
                </div>
              ) : null}
            </a>
          ))
        }
      </div>
    </div>
  </section>
</Layout>

<style>
  .projects-page {
    background-color: var(--slate-50);
  }

  .projects-header {
    text-align: center;
    max-width: 760px;
    margin: 0 auto 52px;
  }

  .eyebrow {
    color: var(--orange-500);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-size: 0.82rem;
    margin-bottom: 14px;
    font-weight: 600;
  }

  .projects-header h1 {
    font-family: var(--font-serif);
    font-size: clamp(2rem, 3vw, 3rem);
    color: var(--slate-900);
    margin-bottom: 14px;
  }

  .projects-header p {
    color: var(--slate-600);
    line-height: 1.7;
    margin: 0;
  }

  .projects-grid {
    display: grid;
    gap: 24px;
  }

  @media (min-width: 768px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .project-card {
    padding: 24px;
    border-radius: 16px;
    border: 1px solid;
    text-decoration: none;
    min-height: 220px;
    display: flex;
    flex-direction: column;
    transition: all 0.25s ease;
    background-color: rgba(255, 255, 255, 0.72);
  }

  .project-card:hover {
    transform: translateY(-4px);
    background-color: #fff;
  }

  .card-1 {
    border-color: var(--blue-200);
    background-color: rgba(239, 246, 255, 0.7);
  }

  .card-2 {
    border-color: var(--sky-200);
    background-color: rgba(240, 249, 255, 0.7);
  }

  .card-3 {
    border-color: var(--indigo-200);
    background-color: rgba(238, 242, 255, 0.7);
  }

  .project-role {
    font-size: 0.875rem;
    color: var(--slate-500);
    margin-bottom: 8px;
  }

  .project-card h2 {
    margin: 0 0 12px;
    color: var(--slate-900);
    font-size: 1.22rem;
  }

  .project-card p {
    margin: 0 0 20px;
    color: var(--slate-600);
    line-height: 1.6;
    font-size: 0.92rem;
  }

  .project-tags {
    margin-top: auto;
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .project-tags span {
    font-size: 0.75rem;
    padding: 4px 8px;
    border-radius: 6px;
    background-color: rgba(255, 255, 255, 0.7);
    border: 1px solid #fff;
    color: var(--slate-600);
  }
</style>
